{
  "name": "code-palette",
  "displayName": "Palette AI - Enhanced",
  "description": "Professional AI-powered component generator with native VS Code integration, real-time chat, and beautiful UI previews",
  "version": "0.2.3",
  "publisher": "sail-project",
  "repository": {
    "type": "git",
    "url": "https://github.com/sailsproject/palette.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "keywords": [
    "react",
    "component",
    "ai",
    "tailwind",
    "ui",
    "design"
  ],
  "activationEvents": [
    "onCommand:palette.openWebview",
    "onCommand:palette.openEnhancedWebview",
    "onCommand:palette.test",
    "onCommand:palette.generate",
    "onCommand:palette.analyze",
    "onCommand:palette.generateInFolder",
    "onCommand:palette.testEnvironment",
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "palette.openWebview",
        "title": "Open Palette Chat"
      },
      {
        "command": "palette.openEnhancedWebview",
        "title": "ðŸŽ¨ Open Palette AI (Enhanced)",
        "category": "Palette"
      },
      {
        "command": "palette.test",
        "title": "Test Palette Extension",
        "category": "Palette"
      },
      {
        "command": "palette.generate",
        "title": "Palette: Generate Component",
        "category": "Palette"
      },
      {
        "command": "palette.analyze",
        "title": "Palette: Analyze Project",
        "category": "Palette"
      },
      {
        "command": "palette.generateInFolder",
        "title": "Generate Component Here",
        "category": "Palette"
      },
      {
        "command": "palette.testEnvironment",
        "title": "Test Environment Variables",
        "category": "Palette"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "palette.test"
        },
        {
          "command": "palette.openEnhancedWebview"
        },
        {
          "command": "palette.generate"
        },
        {
          "command": "palette.analyze"
        },
        {
          "command": "palette.openWebview"
        }
      ],
      "explorer/context": [
        {
          "command": "palette.generateInFolder",
          "when": "explorerResourceIsFolder",
          "group": "palette"
        }
      ]
    },
    "configuration": {
      "title": "Code Palette",
      "properties": {
        "palette.cliPath": {
          "type": "string",
          "default": "palette",
          "description": "Path to the palette CLI executable"
        },
        "palette.defaultModel": {
          "type": "string",
          "default": "gpt-4o-2024-08-06",
          "description": "Default AI model to use"
        },
        "palette.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key (alternative to .env file)",
          "markdownDescription": "Your OpenAI API key. Can also be set in `.env` file as `OPENAI_API_KEY`"
        },
        "palette.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key (alternative to .env file)",
          "markdownDescription": "Your Anthropic API key. Can also be set in `.env` file as `ANTHROPIC_API_KEY`"
        },
        "palette.projectPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Palette project directory",
          "markdownDescription": "Path to the Palette project directory containing the Python CLI. If not set, the extension will try to auto-detect it."
        },
        "palette.enableQualityAssurance": {
          "type": "boolean",
          "default": true,
          "description": "Enable quality assurance and validation stages",
          "markdownDescription": "Enable comprehensive quality checks and auto-fixing (Zero-Fix Pipeline) for generated components"
        },
        "palette.showValidationStages": {
          "type": "boolean",
          "default": true,
          "description": "Show validation progress in the chat",
          "markdownDescription": "Display validation stages (ðŸŽ¨ Generating, âœ… Validating, ðŸš€ Zero-Fix Pipeline) in the chat interface"
        },
        "palette.defaultUILibrary": {
          "type": "string",
          "enum": [
            "auto-detect",
            "none",
            "shadcn/ui",
            "chakra-ui",
            "material-ui",
            "ant-design",
            "headless-ui",
            "mantine",
            "react-bootstrap",
            "semantic-ui",
            "grommet"
          ],
          "default": "auto-detect",
          "description": "Default UI library for component generation",
          "markdownDescription": "Choose the UI component library to use by default. **auto-detect** will analyze your project dependencies to determine the best choice."
        },
        "palette.showLibraryWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Show warnings when chosen library conflicts with project dependencies",
          "markdownDescription": "Display warnings when the selected UI library doesn't match your project's installed dependencies"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "lucide-react": "^0.534.0"
  }
}
{
  "name": "code-palette",
  "displayName": "Code Palette",
  "description": "AI-powered design-to-code tool for React components",
  "version": "0.1.1",
  "publisher": "sail-project",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "keywords": [
    "react",
    "component",
    "ai",
    "tailwind",
    "ui",
    "design"
  ],
  "activationEvents": [
    "onCommand:palette.openWebview",
    "onCommand:palette.generate",
    "onCommand:palette.analyze",
    "onCommand:palette.generateInFolder",
    "onCommand:palette.testEnvironment"
  ],
  "contributes": {
    "commands": [
      {
        "command": "palette.openWebview",
        "title": "Open Palette"
      },
      {
        "command": "palette.generate",
        "title": "Palette: Generate Component",
        "category": "Palette"
      },
      {
        "command": "palette.analyze",
        "title": "Palette: Analyze Project",
        "category": "Palette"
      },
      {
        "command": "palette.generateInFolder",
        "title": "Generate Component Here",
        "category": "Palette"
      },
      {
        "command": "palette.testEnvironment",
        "title": "Test Environment Variables",
        "category": "Palette"
      }
    ],
    "main": "./out/extension.js",
    "menus": {
      "commandPalette": [
        {
          "command": "palette.generate"
        },
        {
          "command": "palette.analyze"
        },
        {
          "command": "palette.openWebview"
        }
      ],
      "explorer/context": [
        {
          "command": "palette.generateInFolder",
          "when": "explorerResourceIsFolder",
          "group": "palette"
        }
      ]
    },
    "configuration": {
      "title": "Code Palette",
      "properties": {
        "palette.cliPath": {
          "type": "string",
          "default": "palette",
          "description": "Path to the palette CLI executable"
        },
        "palette.defaultModel": {
          "type": "string",
          "default": "gpt-4o-2024-08-06",
          "description": "Default AI model to use"
        },
        "palette.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key (alternative to .env file)",
          "markdownDescription": "Your OpenAI API key. Can also be set in `.env` file as `OPENAI_API_KEY`"
        },
        "palette.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key (alternative to .env file)",
          "markdownDescription": "Your Anthropic API key. Can also be set in `.env` file as `ANTHROPIC_API_KEY`"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "lucide-react": "^0.534.0"
  }
}

{
  "compilerOptions": {
    "jsx": "react-jsx",           
    "esModuleInterop": true,      
    "moduleResolution": "node",   
    "allowSyntheticDefaultImports": true,
    
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true
  },
  "include": ["src"]
}
